# Projects
alias pgh-pages='proj && cd fairuzi10.github.io'

# General
alias l='ls -lah'
alias c='clear'
alias o='xdg-open $1'
alias tf='tail -f -n 100'
alias httpdump='sudo tcpdump -i en0 -n -s 0 -w - | grep -a -o -E "Host\: .*|GET \/.*"'

# GIT
alias gb='git branch'
alias gl='git log'
alias glo='git log --oneline'
alias gc='git commit -v'
